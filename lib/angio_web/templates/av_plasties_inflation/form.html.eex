         <span class="field_help"></span>
          <%= checkbox f, :avpi_stabilization_yn,
            type: "checkbox" %>
            <%= error_tag f,
           :avpi_stabilization_yn %>
        </div>
        <p class="help">Check if Yes
        </p>
    </div><!-----field------------------>




</div><!----column-------------------->
 <div class = "column">
