<% alias Angio.Canons, as: Query %>

<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

<div class="columns">
  <div class="column frame_1">

<!---------start----------------------------------->
  <div class = "columns">

<div class = "column">

<!--- start field--------------------------------->
<div class="field">
            <label class="label field_help " >Device Counter </label>
            <%= text_input f, :avpi_inflation_counter , class: "input", type: "text",
            placeholder: "avpi_inflation_counter", required: false %>
            <%= error_tag f, :avpi_inflation_counter %>
          <p class="help"></p>
        </div>
<!-----------end field----------------------->


</div><!----column-------------------->
<div class = "column">

<!----- start selection field---------------------------->
   <%  s_avpi_balloon_technique  =  Query.select_options("avpi_balloon_technique") %>
<div class="field">
    <label class="label">Balloon Technique </label>
          <div class="control">
            <div class="select is-link">
             <span class="field_help"></span>
              <%= select(f,
:avpi_balloon_technique, s_avpi_balloon_technique,
prompt: "---Select---",
class: "form-control")
              %>
            </div>
            <!--select--->
            <%= error_tag f, :avpi_balloon_technique %>
            <span class="help"></span>


          </div><!----control---->
        </div><!------field--->

 <!-------end selection field----------------------->

</div><!----column-------------------->
</div><!----columns--------------------------->

<!---------end start------------------------------------>


<!---------start----------------------------------->
  <div class = "columns">

<div class = "column">
<!--- start field--------------------------------->
<div class="field">
