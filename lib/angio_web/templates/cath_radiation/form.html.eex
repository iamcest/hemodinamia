      <div class="columns">
        <div class="column">

              <div class="field">
  <label class="label"> My Notes </label>
  <div class="control">
    <%= text_input f, :car_notes,
        class: "textarea",
        type: "input", placeholder: "car_notes"  %>
  <p class="help"></p>

  </div><!---control---------->
   </div><!-------field-------->
        </div><!----column 1------------->

     </div><!-----columns------------>
     <!-------end start------------------------>

 
 <%= render  AngioWeb.SharedView, "_help_area.html" %>

      </div><!----end Right Column------>
