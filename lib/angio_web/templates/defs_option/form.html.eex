<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    </div>
 <div class="notification is-danger">
    <button class="delete"></button>
    Oops, something went wrong! Please check the errors below or Dublicate Record
</div>
  <% end %>

  <!----columns----L-R COLUMNS--------------->
    <div class="columns">
  
   <div class="column frame_1">



  <div class="columns">
    <div class="column">
 <div class="field">
  <label class="label">Field - Element Name</label>
  <div class="control">
  <%= text_input f, :name, value: "#{@definition.name}",
class: "input" %>

  <%= error_tag f, :name %>

  <p class="help"></p>

  </div><!---control---------->
   </div><!-------field-------->


  </div><!----column------->

  <div class="column">

 <div class="field">
  <label class="label">Save In DB As Code </label>
